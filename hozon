import ANS  
    if message == '/Instructions':  # 説明書
        await message.channel.send(ans.Instructions)
    elif message.content == '/DM':  # dm送信
        dm = await message.author.create_dm()  # メッセージ送信者へDM作成
        await dm.send(ans.DM)  # DM送信
    elif message.content == '/command':  # コマンド表示
        await message.channel.send(ans.command)
    elif message.content.startswith('HamterRAW') or 'HamterRAW' in message.content:  # 文字列の開始が一致
         await message.channel.send(ans.HamterRAW)
    elif message.content == 'ハム' or 'ハム' in message.content:
         await message.channel.send(ans.hamu)
    elif '太郎' in message.content:
         await message.channel.send(ans.taro)
    elif message.content == 'Ham':
         await message.channel.send(ans.lileGold)
    elif message.content == 'ビビりハム':
         await message.channel.send(ans.bibiri)
    elif message.content == '嫌い':
         await message.channel.send(ans.dntlike)
    elif message.content == 'ham':
         await message.channel.send(ans.ham)
    elif 'はむカービィ' in message.content:
         await message.channel.send(ans.kirby)
    elif 'LeGal' in message.content or 'リーガルさん' in message.content:
         await message.channel.send(ans.LeGal)


=============================================================
